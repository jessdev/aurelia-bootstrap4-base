{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "removeComments": true,
    "strict": true,
    "lib": ["es2015", "dom"],
    "types": ["webpack-env"]
  },
  "exclude": ["bin", "node_modules", "back"]
}